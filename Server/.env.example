# Backend Environment Variables
# Copy this file to .env and fill in your values
# IMPORTANT: .env should be in .gitignore (not committed to git)

# Server Port
PORT=2068

# MongoDB Connection (use either MONGODB_URI or CONNECTION_STRING)
MONGODB_URI=your_mongodb_connection_string
# OR
# CONNECTION_STRING=your_mongodb_connection_string

# JWT Secret (use a strong random string - generate with: openssl rand -base64 32)
JWT_SECRET=your_super_secret_jwt_key_here

# Node Environment (production or development)
NODE_ENV=production

# Frontend URLs for CORS
# Development: http://localhost:5173,http://localhost:3000
# Production: https://your-vercel-url.com,https://your-netlify-url.com
FRONTEND_URL=https://dev-scroll-blog.vercel.app
